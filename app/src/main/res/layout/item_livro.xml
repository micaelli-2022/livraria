<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/ed_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Título do Livro"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="6dp" />

    <TextView
        android:id="@+id/ed_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor do Livro"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="36dp" />

    <TextView
        android:id="@+id/ed_editora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editora"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="212dp"
        tools:layout_editor_absoluteY="64dp" />


    <TextView
        android:id="@+id/ed_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição do Livro"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="128dp" />

    <ImageView
        android:id="@+id/ed_urlimagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/ed_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="isbn"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="242dp"
        tools:layout_editor_absoluteY="102dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="?actionBarDivider"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_description" />


</androidx.constraintlayout.widget.ConstraintLayout>